<!-- views/auth.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Chick-fil-A's Login Page</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <!-- load bulma css -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- load fontawesome -->
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white;
        flex-direction: column;
        width: auto;
        margin: 0 auto;
      }

      .logo {
        margin-bottom: 35px;
        height: 20%;
        width: 20%;
      }

      .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .employee {
        position: fixed;
        top: 1%;
        left: 1%;
        width: 10px;
      }

      .manager,
      .server {
        display: inline-block;
        background-color: #e83535;
        color: #fff;
        border-radius: 10px;
        padding: 5px 10px;
        margin-bottom: 10px;
        font-size: 15px;
        cursor: pointer;
        justify-content: center;
      }

      .signin {
        background-color: #e83535;
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        justify-content: center;
        margin-top: 20px;
      }

      a:hover {
        background-color: #fff;
        color: #f44242;
        text-decoration: none;
      }

      /*Google Translate API*/

      #google_translate_element {
        position: fixed;
        top: 2%;
        right: 3%;
        color: transparent;
      }

      #google_translate_element a {
        display: none;
      }

      .goog-te-gadget {
        color: transparent !important;
      }

      .goog-te-gadget img {
        display: none !important;
      }

      body > .skiptranslate {
        display: none;
      }
    </style>

    <script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement(
          {
            pageLanguage: "en",
            includedLanguages: "en,zh-CN,cs,da,fr,es,vi",
          },
          "google_translate_element"
        );
      }
    </script>

    <script
      type="text/javascript"
      src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
    ></script>
  </head>

  <body>
    <!---Google Translate API Section--->
    <div id="google_translate_element"></div>

    <!---Google OAuth and Login Section--->
    <img src="/Chick-fil-A-Logo.png" class="logo" />
    <h1 class="store-name">Chick-fil-A</h1>
        <div class="employee">
          <a href="/auth/google" class="manager">Manager</a>
          <a href="/auth/google" class="server">server</a>
        </div>
        <div class="button-container">
          <a href="/customer" class="signin">Start Checkout</a>
        </div>
    </div>
  </body>
</html>
