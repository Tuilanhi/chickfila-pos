<!DOCTYPE html>
<html>
  <head>
    <title>Menu Board</title>

    <link
      rel="shortcut icon"
      href="https://www.freepnglogos.com/uploads/chick-fil-a-png-logo/chiefs-dominate-against-war-eagles-png-logo-7.png"
      type="image/x-icon"
    />

    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        font-size: 15px;
        display: grid;
      }
      a {
        text-decoration: none;
      }
      .logo {
        position: absolute;
        top: 2%;
        left: 48%;
        height: 50px;
        right: 0;
      }
      .menu {
        background-color: #fff;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        top: 10%;
        text-align: center;
        margin-bottom: 20px;
        margin-top: 80px;
        font-size: 35px;
      }
      .category {
        margin-bottom: 30px;
      }
      h2 {
        font-size: 28px;
        margin-bottom: 10px;
      }
      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }
      li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
      }
      li img {
        width: 100px;
        height: 100px;
        margin-right: 10px;
      }
      .item {
        flex-grow: 1;
      }
      .price {
        font-weight: bold;
        margin-left: 10px;
      }
      /*BACK BUTTON*/
      .backbtn {
        position: absolute;
        top: 2%;
        left: 0.5%;
      }
      .signout {
        color: white;
        background-color: red;
        border-radius: 10px;
        padding: 5px 10px;
        cursor: pointer;
        text-decoration: none;
      }
      .signout:hover {
        background-color: white;
        color: red;
        text-decoration: none;
      }
      /*Text Enlarge Button*/
      #font-changing {
        position: absolute;
        top: 2%;
        left: 5%;
      }
      #enlarge-button,
      #reset-button {
        color: white;
        background-color: red;
        border-radius: 10px;
        padding: 5px 12px;
        cursor: pointer;
        text-decoration: none;
      }
      #enlarge-button:hover,
      #reset-button:hover {
        background-color: white;
        color: red;
        text-decoration: none;
      }
      /*Google Translate API*/
      #google_translate_element {
        position: absolute;
        top: 2%;
        right: 3%;
        color: transparent;
      }
      #google_translate_element a {
        display: none;
      }
      .goog-te-gadget {
        color: transparent !important;
      }
      .goog-te-gadget img {
        display: none !important;
      }
      body > .skiptranslate {
        display: none;
      }
      .thankyou {
        
        text-align: center;
        font-size: xx-large;
      }
    </style>

<script type="text/javascript">
    function googleTranslateElementInit() {
      new google.translate.TranslateElement(
        {
          pageLanguage: "en",
          includedLanguages: "en,zh-CN,cs,da,fr,es,vi",
        },
        "google_translate_element"
      );
    }
  </script>

  <script
    type="text/javascript"
    src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
  ></script>

<script type="text/javascript">
    function enlargeText() {
      const elementsToEnlarge = document.querySelectorAll("body *");
      elementsToEnlarge.forEach((element) => {
        const currentFontSize = parseFloat(
          window.getComputedStyle(element).fontSize
        );
        const newFontSize = currentFontSize + 1;
        element.style.fontSize = `${newFontSize}px`;
      });
    }
    const enlargeButton = document.getElementById("enlarge-button");
    enlargeButton.onclick = enlargeText;
    function resetText() {
      const elementsToReset = document.querySelectorAll("body *");
      elementsToReset.forEach((element) => {
        element.style.fontSize = null;
      });
    }
  </script>
  </head>
  <body>
    <div>
    <!---Google Translate API Section--->
    <div id="google_translate_element"></div>

    <!---Back Button--->
    <div class="backbtn">
        <a href="/" class="signout">Back</a>
      </div>

      <!---Enlarge Text Button--->
    <div id="font-changing">
        <a id="reset-button" onClick="resetText()">Reset Text</a>
        <a id="enlarge-button" onClick="enlargeText()">Enlarge Text</a>
      </div>

    <img src="../images/Chick-fil-A-Logo.png" class="logo" />
    </div>
    <div class = "thankyou">
        <p>Thank you for your order</p>
        <p>Order Number: <%=results[0].orderid%></p>
    </div>
</html>
