<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <style>
    /* Style for cart page */
    body {
      font-family: sans-serif;
    }
    .cart-container {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin: 20px;
    }
    table {
      border-collapse: collapse;
      width: 100%;
      margin-bottom: 20px;
    }
    th {
      background-color: #f2f2f2;
    }
    td, th {
      border: 1px solid #ddd;
      text-align: left;
      padding: 8px;
    }
    td:first-child {
      font-weight: bold;
    }
    .remove-item {
      background-color: #d11;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }
    .remove-item:hover {
      background-color: #f33;
    }
    .checkout-container {
      margin-left: 50px;
      padding: 20px;
      background-color: #f7f7f7;
      border: 1px solid #ddd;
      border-radius: 5px;
      text-align: center;
    }
    .checkout-header {
      margin-top: 0;
    }
    .checkout-button {
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      cursor: pointer;
    }
    .checkout-button:hover {
      background-color: #3e8e41;
    }
  </style>
    
</head>

<body>
    <script type="text/javascript">
        // Calculate the total price of all items in the cart
        function getTotalPrice(items) {
        var totalPrice = 0;
        for (var i = 0;  i < items.length; i++) {
            totalPrice += items[i].price;
            }
            return totalPrice;
        }
     </script>
  <div class="cart-container">
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < currentCart.length; i++) { %>
        <tr>
          <td><%= currentCart[i].name %></td>
          <td>$<%= currentCart[i].price.toFixed(2) %></td>
          <td><button class="remove-item" data-index="<%= i %>">Remove</button></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div class="checkout-container">
      <h2 class="checkout-header">Order Summary</h2>
      <p>Total items: <%= currentCart.length %></p>
      <!-- <p>Total price: $<%= getTotalPrice(items).toFixed(2) %></p> -->
      <button class="checkout-button">Checkout</button>
    </div>
  </div>

  <script type="text/javascript">
    // Define the items array
    var items = currentCart;

    // Function to remove an item from the cart
    function remove(index) {
    // Remove the item from the array
    items.splice(index, 1);

    // Output the updated items array to the console
    console.log(items);
    }

    // Get all remove item buttons
    var removeButtons = document.querySelectorAll('.remove-item');

    // Add click event listener to each remove button
    removeButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            // Get the index of the item to remove
            var index = button.getAttribute('data-index');

            // Call the remove function with the index as argument
            remove(index);
        });
    });
    </script>
</body>
</html>